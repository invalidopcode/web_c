<!doctype html>
<html lang=en>
<head>
  {{#page}}
    <title>{{title}}</title>
  {{/page}}
  {{^page}}
    <title>{{site.title}}</title>
  {{/page}}

 <!-- fontawesome, for icons... -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

 <!-- brick fonts (NOT google) -->
  <link rel="stylesheet" href="//brick.freetls.fastly.net/Titillium:400,700,400i,700i/Alegreya:400,700,400i,700i/Source+Code+Pro:400,700" crossorigin="anonymous">

 <!-- our stylesheet... -->
  <link rel="stylesheet" href="/css/style.css?v=10" />

 <!-- basic tech cruft --> 
  <meta charset="UTF-8">
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

 <!--shameless self-promotion-->
  <meta name="generator" content="web_c 0.0.0" />
<!-- ***** media tags go here ******  -->
</head>

<body>
  <div id=container>
    <header class="header" role="banner">
      <h1 class="site-title">{{site.title}}</h1>
      <div class="site-description">{{site.description}}</div>
    </header>
    <nav class="menu" role="navigation">
      {{#site}}
        {{#menu}}
          <span><a href="{{{link}}}">{{text}}</a></span>
          <span class="nav-delimiter"></span>
        {{/menu}}
      {{/site}}
      <!--NOTE unneccesary delimiter is handled by css-->
    </nav>

    <main id="content" role="main">
      {{{content}}}
    </main>

    <footer class="footer" role="contentinfo">
      <div class="footer-line"></div>
      <div class="session_bar">
        <a href="/control.html">control panel</a> | <a href="/login.html">sign in</a>
      </div>
    </footer>
  </div>

  <script src="scripts/session_bar.js"></script>
</body>

</html>

